
<form method="POST" action="/customer/<%= @customer.id %>">
  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @customer.name %>"
  />

  <label for="appointment-field">Appointment time:</label>
  <input
  type="text"
  name="appointment"
  id="appointment-field"
  value="<%= @customer.appointment %>"
  />

  <label for="contact-field">Contact Details:</label>
  <input
  type="text"
  name="contact_details"
  id="contact-field"
  value="<%= @customer.contact_details %>"
  />

 <div class="form-el">
   <h4>Select a Pet</h4>
    <form action="index.html" method="post">
              <% @pets.each do |pet| %>
      <input type="checkbox" name="pet_id" value="<%=pet.id%>"><%= pet.name%></input>
      <% end %>
        <input type='submit' value="Edit Customer">
    </form>
 </div>


  <div class="form-el">
      <label for="pet-select">Select Pet:</label>
      <select name="pet_id" id="pet-select" selected="<%= @customer.pet_id %>">
        <% @pets.each do |pet| %>
          <% if pet.id == @customer.pet_id %>
            <option value=<%= pet.id %> selected><%= pet.name %></option>
          <% else %>
            <option value=<%= pet.id %>><%= pet.name%></option>
          <% end %>
        <% end %>
      </select>
    </div>

  <input type='submit' value="Edit Customer">
</form>
