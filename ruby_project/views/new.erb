<form method="post" action="/pets">

  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  />

  <label for="dob-field">D.O.B:</label>
  <input
  type="text"
  name="dob"
  id="dob-field"
  />

  <label for="type-field">Type of Pet:</label>
  <input
  type="text"
  name="type_of_animal"
  id="type-field"
  />

  <label for="treatment-field">Treatment Notes:</label>
  <input
  type="text"
  name="treatment_notes"
  id="treatment-field"
  />



  <label for="vet_select">Select Vet:</label>
  <select name="vet_id" id="vet_select">
    <% @vets.each do |vet| %>
    <option value=<%=vet.id%>><%=vet.name%></option>
    <%end%>
  </select>


  <input type="submit" value="New Pet">

</form>
