<form method="POST" action="/pets/<%= @pet.id %>">
  <label for="name-field">Name:</label>
  <input
  type="text"
  name="name"
  id="name-field"
  value="<%= @pet.name %>"
  />

  <label for="dob-field">D.O.B:</label>
  <input
  type="text"
  name="dob"
  id="dob-field"
  value="<%= @pet.dob %>"
  />

  <label for="type-field">Type of animal:</label>
  <input
  type="text"
  name="type_of_animal"
  id="type-field"
  value="<%= @pet.type_of_animal %>"
  />

  <label for="contact-field">Contact Details:</label>
  <input
  type="text"
  name="contact_details"
  id="contact-field"
  value="<%= @pet.contact_details %>"
  />

  <label for="treatment-field">Treatment Notes:</label>
  <input
  type="text"
  name="treatment_notes"
  id="treatment-field"
  value="<%= @pet.treatment_notes %>"
  />

  <label for="select-vet">Select a Vet:</label>
  <select name="vet_id" id="vet-selection">
    <option hidden value="default">Select A Vet</option>
    <option
    value="1"
    <%= "selected" if @pet.vet.name == "Jim Smith" %>
    >Jim Smith</option>
    <option
    value="2"
    <%= "selected" if @pet.vet.name == "Sarah Brown" %>
    >Sarah Brown</option>
  </select>

  <input type='submit' value="Edit Pet">
</form>
